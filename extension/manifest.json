{
  "manifest_version": 3,
  "name": "SALAMA - Smart Contract Safety",
  "version": "0.2.0",
  "description": "Eleza smart contracts kwa Kiswahili. Protect yourself from scams.",
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:7860/*",
    "https://*.hf.space/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
